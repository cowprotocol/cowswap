{
  "nxCloudId": "6971b4db5c787e19f475dfc3",
  "packageManager": "pnpm",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "develop"
  },
  "release": {
    "projectsRelationship": "independent",
    "projects": [
      "libs/events",
      "libs/types",
      "libs/permit-utils",
      "libs/widget-lib",
      "libs/widget-react",
      "libs/iframe-transport",
      "libs/hook-dapp-lib"
    ]
  },
  "targetDefaults": {
    "build": {
      "inputs": ["production", "^production", "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)"],
      "cache": true
    },
    "e2e": {
      "inputs": ["production", "^production"],
      "cache": true
    },
    "test": {
      "inputs": ["production", "^production"],
      "cache": true
    },
    "i18n": {
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "inputs": ["production", "^production"],
      "cache": true
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/node_modules/**/*",
      "!{projectRoot}/src/locales/*.js",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/CHANGELOG.md"
    ],
    "sharedGlobals": []
  },
  "generators": {
    "@nx/react": {
      "application": {
        "style": "styled-components",
        "linter": "eslint",
        "bundler": "vite",
        "babel": true
      },
      "component": {
        "style": "styled-components"
      },
      "library": {
        "style": "styled-components",
        "linter": "eslint",
        "unitTestRunner": "jest"
      }
    },
    "@nx/next": {
      "application": {
        "style": "styled-components",
        "linter": "eslint"
      }
    }
  },
  "plugins": [
    {
      "plugin": "@nx/next/plugin",
      "options": {
        "startTargetName": "start",
        "buildTargetName": "build",
        "devTargetName": "dev",
        "serveStaticTargetName": "serve-static"
      }
    },
    {
      "plugin": "@nx/eslint-plugin",
      "options": {
        "targetName": "lint",
        "extensions": ["ts", "tsx", "js", "jsx", "html", "vue"]
      }
    },
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json"
        }
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "eslint:lint"
      }
    }
  ]
}
